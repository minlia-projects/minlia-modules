<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minlia.module.i18n.mapper.I18nMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.minlia.module.i18n.entity.I18nEntity">
        <id column="id" property="id"/>
        <result column="appid" property="appid"/>
        <result column="code" property="code"/>
        <result column="value" property="value"/>
        <result column="locale" property="locale"/>
        <result column="language" property="language"/>
        <result column="create_by" property="createBy"/>
        <result column="create_date" property="createDate"/>
        <result column="last_modified_by" property="lastModifiedBy"/>
        <result column="last_modified_date" property="lastModifiedDate"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, appid, code, value, locale, language, create_by, create_date, last_modified_by, last_modified_date
    </sql>

    <select id="queryMap" resultType="java.util.Map">
        SELECT code, `value` FROM sys_i18n
        <include refid="QUERY_CONDITION"/>
    </select>

    <sql id="QUERY_CONDITION">
        <where>
            <if test="appid != null">
                AND appid = #{appid}
            </if>
            <if test="code != null">
                AND instr(`code`, #{code}) > 0
            </if>
            <if test="locale != null">
                AND locale = #{locale}
            </if>
            <if test="value != null">
                AND instr(`value`, #{value}) > 0
            </if>
        </where>
    </sql>

</mapper>
