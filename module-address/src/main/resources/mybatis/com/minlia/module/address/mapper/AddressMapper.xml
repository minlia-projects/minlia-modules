<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minlia.module.address.mapper.AddressMapper">

    <sql id="QUERY_CONTENT">
		SELECT
			id,
            guid,
            province,
            city,
            district,
            street,
            address,
            postal_code,
            def,
            enabled,
			create_by ,
			create_date ,
			last_modified_by,
			last_modified_date
		FROM
			mdl_address
	</sql>

    <sql id="QUERY_CONDITION">
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="guid != null">
                AND guid = #{guid}
            </if>
            <if test="def != null">
                AND def = #{def}
            </if>
            <if test="enabled != null">
                AND enabled = #{enabled}
            </if>
        </where>
    </sql>

    <insert id="create" useGeneratedKeys="true" keyProperty="id">
		insert into mdl_address(
			guid,
            province,
            city,
            district,
            street,
            address,
            postal_code,
            def,
			create_by
		) VALUES (
			#{guid} ,
			#{province} ,
			#{city} ,
			#{district} ,
			#{street} ,
			#{address} ,
			#{postalCode} ,
			#{def} ,
			#{createBy}
		)
	</insert>

    <update id="update">
        UPDATE mdl_address
        <set>
            <if test="province != null">
                province = #{province},
            </if>
            <if test="city != null">
                city = #{city},
            </if>
            <if test="district != null">
                district = #{district},
            </if>
            <if test="street != null">
                street = #{street},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="postalCode != null">
                postal_code = #{postalCode},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
            last_modified_by = #{lastModifiedBy,jdbcType=VARCHAR}
        </set>
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

    <update id="updateDefault">
        UPDATE mdl_address SET def = 0 WHERE guid = #{guid} AND def = 1 AND enabled = 1;
        UPDATE mdl_address SET def = 1 WHERE id = #{id};
    </update>

    <delete id="delete">
        DELETE FROM mdl_address WHERE id = #{id,jdbcType=BIGINT}
    </delete>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(1) FROM mdl_address
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryOne" resultType="com.minlia.module.address.entity.Address">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryList" resultType="com.minlia.module.address.entity.Address">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryAll" resultType="com.minlia.module.address.entity.Address">
        <include refid="QUERY_CONTENT"/>
    </select>

</mapper>