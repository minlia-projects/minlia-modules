<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minlia.module.bible.mapper.BibleItemMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.minlia.module.bible.entity.BibleItemEntity">
        <id column="id" property="id" />
        <result column="parent_code" property="parentCode" />
        <result column="code" property="code" />
        <result column="value" property="value" />
        <result column="notes" property="notes" />
        <result column="attribute1" property="attribute1" />
        <result column="attribute2" property="attribute2" />
        <result column="attribute3" property="attribute3" />
        <result column="create_by" property="createBy" />
        <result column="create_date" property="createDate" />
        <result column="last_modified_by" property="lastModifiedBy" />
        <result column="last_modified_date" property="lastModifiedDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, parent_code, code, value, notes, sorts, attribute1, attribute2, attribute3, create_by, create_date, last_modified_by, last_modified_date
    </sql>

    <select id="queryValueMap" resultType="java.util.Map">
        SELECT `code`, `value` from sys_bible_item WHERE parent_code = #{bibleCode};
    </select>

</mapper>