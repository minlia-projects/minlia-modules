<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minlia.module.captcha.mapper.CaptchaMapper">

    <sql id="QUERY_CONTENT">
		SELECT
			id ,
			cellphone ,
			email ,
			code ,
			used ,
			locked ,
			failure_count ,
			effective_time ,
			send_time ,
			enabled
		FROM
			mdl_captcha
	</sql>

    <sql id="QUERY_CONDITION">
        <where>
            <if test="cellphone != null">
                cellphone = #{cellphone}
            </if>
            <if test="email != null">
                AND email = #{email}
            </if>
            <if test="code != null">
                AND code = #{code}
            </if>
            <if test="used != null">
                AND used = #{used}
            </if>
            <if test="locked != null">
                AND locked = #{locked}
            </if>
            <if test="enabled != null">
                AND enabled = #{enabled}
            </if>
        </where>
    </sql>

    <sql id="ORDER_BY">
        <if test="sorts != null">
            ORDER BY
            <foreach collection="sorts" item="item" separator=",">
                ${item.filed} ${item.direction}
            </foreach>
        </if>
    </sql>

    <insert id="create" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO mdl_captcha(
			cellphone ,
			email ,
			code ,
			used ,
			locked ,
			failure_count ,
			effective_time ,
			send_time
		)
		VALUES (
            #{cellphone,jdbcType=VARCHAR} ,
            #{email,jdbcType=VARCHAR} ,
            #{code,jdbcType=VARCHAR} ,
            #{used,jdbcType=TINYINT} ,
            #{locked,jdbcType=TINYINT} ,
            #{failureCount,jdbcType=TINYINT} ,
            #{effectiveTime,jdbcType=TIMESTAMP},
            #{sendTime,jdbcType=TIMESTAMP}
        )
	</insert>

    <update id="update" parameterType="com.minlia.module.captcha.entity.Captcha">
        UPDATE mdl_captcha
        <set>
            <if test="code != null">
                code = #{code,jdbcType=VARCHAR} ,
            </if>
            <if test="used != null">
                used = #{used,jdbcType=TINYINT} ,
            </if>
            <if test="locked != null">
                locked = #{locked,jdbcType=TINYINT} ,
            </if>
            <if test="failureCount != null">
                failure_count = #{failureCount,jdbcType=TINYINT} ,
            </if>
            <if test="effectiveTime != null">
                effective_time = #{effectiveTime,jdbcType=TIMESTAMP} ,
            </if>
            <if test="sendTime != null">
                send_time = #{sendTime,jdbcType=TIMESTAMP} ,
            </if>
        </set>
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

    <delete id="delete">
		DELETE FROM mdl_bible WHERE id = #{id}
	</delete>

    <select id="queryOne" resultType="com.minlia.module.captcha.entity.Captcha">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryList" resultType="com.minlia.module.captcha.entity.Captcha">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
        <include refid="ORDER_BY"/>
    </select>

</mapper>