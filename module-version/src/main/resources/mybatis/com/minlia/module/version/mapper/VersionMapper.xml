<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minlia.module.version.mapper.VersionMapper">

    <sql id="QUERY_CONTENT">
        SELECT
            id,
            number,
            type,
            download_url,
            test,
            notes,
            forced_download,
            enabled,
            attribute1,
            attribute2,
            attribute3,
            attribute4,
            attribute5,
            create_by,
            create_date,
            last_modified_by,
            last_modified_date
        FROM
            mdl_version
	</sql>

    <sql id="QUERY_CONDITION">
        <where>
            <if test="number != null">
                number = #{number}
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
            <if test="test != null">
                AND test = #{test}
            </if>
            <if test="enabled != null">
                AND enabled = #{enabled}
            </if>
            <if test="attribute1 != null">
                AND attribute1 = #{attribute1}
            </if>
            <if test="attribute2 != null">
                AND attribute2 = #{attribute2}
            </if>
            <if test="attribute3 != null">
                AND attribute3 = #{attribute3}
            </if>
            <if test="attribute4 != null">
                AND attribute4 = #{attribute4}
            </if>
            <if test="attribute5 != null">
                AND attribute5 = #{attribute5}
            </if>
            <if test="newest">
                AND id = (SELECT id FROM mdl_version WHERE TYPE = #{type} AND enabled = 1 ORDER BY number DESC LIMIT 1)
            </if>
        </where>
    </sql>

    <insert id="create" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO mdl_version(
            number,
            type,
            download_url,
            test,
            notes,
            forced_download,
            enabled,
            attribute1,
            attribute2,
            attribute3,
            attribute4,
            attribute5,
            create_by
        ) VALUES (
            #{number},
            #{type} ,
            #{downloadUrl} ,
            #{test} ,
            #{notes} ,
            #{forcedDownload} ,
            #{enabled} ,
            #{attribute1} ,
            #{attribute2} ,
            #{attribute3} ,
            #{attribute4} ,
            #{attribute5} ,
            #{createBy}
        )
    </insert>

    <update id="update" parameterType="com.minlia.module.version.bean.entity.Version">
        UPDATE mdl_version
        <set>
            <if test="number != null">
                number = #{number},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="downloadUrl != null">
                download_url = #{downloadUrl},
            </if>
            <if test="test != null">
                test = #{test} ,
            </if>
            <if test="notes != null">
                notes = #{notes} ,
            </if>
            <if test="forcedDownload != null">
                forced_download = #{forcedDownload} ,
            </if>
            <if test="enabled != null">
                enabled = #{enabled} ,
            </if>
            <if test="attribute1 != null">
                attribute1 = #{attribute1} ,
            </if>
            <if test="attribute2 != null">
                attribute2 = #{attribute2} ,
            </if>
            <if test="attribute3 != null">
                attribute3 = #{attribute3} ,
            </if>
            <if test="attribute4 != null">
                attribute4 = #{attribute4} ,
            </if>
            <if test="attribute5 != null">
                attribute5 = #{attribute5} ,
            </if>
            last_modified_by = #{lastModifiedBy,jdbcType=VARCHAR}
        </set>
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

    <delete id="delete">
        DELETE FROM mdl_version WHERE id = #{id}
    </delete>

    <select id="queryById" resultType="com.minlia.module.version.bean.entity.Version">
        <include refid="QUERY_CONTENT"/>
        WHERE id = #{id}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(1) FROM mdl_version t
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="one" resultType="com.minlia.module.version.bean.entity.Version">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="list" resultType="com.minlia.module.version.bean.entity.Version">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

</mapper>