<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minlia.module.bible.mapper.BibleItemMapper">

    <sql id="QUERY_CONTENT">
		SELECT
			mbit.id ,
			mbit.parent_code ,
			mbit.code ,
			mbit.value,
			mbit.notes ,
			mbit.sorts ,
			mbit.attribute1 ,
			mbit.attribute2 ,
			mbit.attribute3 ,
			mbit.create_by ,
			mbit.create_date ,
			mbit.last_modified_by,
			mbit.last_modified_date
		FROM
			mdl_bible_item mbit
	</sql>

    <sql id="QUERY_CONDITION">
        <if test="parentCode != null">
            INNER JOIN mdl_bible mbt on mbt.code = mbit.parent_code
        </if>
        <where>
            <if test="parentCode != null">
                AND mbit.parent_code = #{parentCode}
            </if>
            <if test="code != null">
                AND mbit.code = #{code}
            </if>
            <if test="value != null">
                AND mbit.value = #{value}
            </if>
            <if test="attribute1 != null">
                AND mbit.attribute1 = #{attribute1}
            </if>
        </where>
    </sql>

    <insert id="create">
		INSERT INTO mdl_bible_item(
			parent_code ,
			code ,
			value ,
			notes ,
			sorts ,
			attribute1,
			attribute2,
			attribute3,
			create_by
		)
		VALUES
		(
			#{parentCode} ,
			#{code} ,
			#{value} ,
			#{notes} ,
			#{sorts} ,
			#{attribute1} ,
			#{attribute2} ,
			#{attribute3} ,
			#{createBy}
		)
	</insert>

    <update id="update" parameterType="com.minlia.module.bible.entity.BibleItem">
        UPDATE mdl_bible_item
        <set>
            <if test="value != null">
                value = #{value},
            </if>
            <if test="notes != null">
                notes = #{notes},
            </if>
            <if test="attribute1 != null">
                attribute1 = #{attribute1},
            </if>
            <if test="attribute2 != null">
                attribute2 = #{attribute2},
            </if>
            <if test="attribute3 != null">
                attribute3 = #{attribute3},
            </if>
            <if test="sorts != null">
                sorts = #{sorts},
            </if>
            last_modified_by = #{lastModifiedBy,jdbcType=VARCHAR}
        </set>
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

    <delete id="delete">
		DELETE FROM mdl_bible_item WHERE id = #{id}
	</delete>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(1) FROM mdl_bible_item mbit
        <include refid="QUERY_CONTENT"/>
    </select>

    <select id="queryById" resultType="com.minlia.module.bible.entity.BibleItem">
        <include refid="QUERY_CONTENT"/>
        WHERE mbit.id = #{id}
    </select>

    <select id="queryOne" resultType="com.minlia.module.bible.entity.BibleItem">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryList" resultType="com.minlia.module.bible.entity.BibleItem">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryValueMap" resultType="java.util.Map">
        SELECT `code`, `value` from mdl_bible_item WHERE parent_code = #{bibleCode};
    </select>

</mapper>