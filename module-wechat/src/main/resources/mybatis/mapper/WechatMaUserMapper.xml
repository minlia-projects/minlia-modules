<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minlia.module.wechat.ma.mapper.WechatMaUserMapper">

    <sql id="QUERY_CONTENT">
        SELECT
            id ,
            guid ,
            union_id ,
            open_id ,
            nick_name ,
            gender ,
            city ,
            province ,
            country ,
            avatar_url ,
            code,
            timestamp AS "watermark.timestamp" ,
            appid AS "watermark.appid"
        FROM
            wx_ma_user
    </sql>

    <sql id="QUERY_CONDITION">
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="guid != null">
                AND guid = #{guid}
            </if>
            <if test="code != null">
                AND code = #{code}
            </if>
            <if test="openId != null">
                AND open_id = #{openId}
            </if>
            <if test="unionId != null">
                AND union_id = #{unionId}
            </if>
            <if test="guidNotNull">
                AND guid is not null
            </if>
        </where>
    </sql>

    <sql id="ORDER_BY">
        <if test="sorts != null">
            ORDER BY
            <foreach collection="sorts" item="item" separator=",">
                ${item.filed} ${item.direction}
            </foreach>
        </if>
    </sql>

    <insert id="create" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO wx_ma_user(
            guid ,
            union_id ,
            open_id ,
            nick_name ,
            gender ,
            city ,
            province ,
            country ,
            avatar_url ,
            code,
            timestamp ,
            appid
        )
        VALUES
        (
            #{guid,jdbcType=VARCHAR},
            #{unionId,jdbcType=VARCHAR},
            #{openId,jdbcType=VARCHAR},
            #{nickName,jdbcType=VARCHAR},
            #{gender,jdbcType=VARCHAR},
            #{city,jdbcType=VARCHAR},
            #{province,jdbcType=VARCHAR},
            #{country,jdbcType=VARCHAR},
            #{avatarUrl,jdbcType=VARCHAR},
            #{code,jdbcType=VARCHAR},
            #{watermark.timestamp,jdbcType=VARCHAR},
            #{watermark.appid,jdbcType=VARCHAR}
        )
    </insert>

    <update id="update" parameterType="com.minlia.module.wechat.ma.bean.entity.WechatMaUser">
        UPDATE wx_ma_user
        <set>
            <if test="guid != null">
                guid = #{guid,jdbcType=VARCHAR} ,
            </if>
            <if test="code != null">
                code = #{code,jdbcType=VARCHAR} ,
            </if>
            <if test="unionId != null">
                union_id = #{unionId,jdbcType=VARCHAR} ,
            </if>
            <if test="openId != null">
                open_id = #{openId,jdbcType=VARCHAR} ,
            </if>
            <if test="nickName != null">
                nick_name = #{nickName,jdbcType=VARCHAR} ,
            </if>
            <if test="gender != null">
                gender = #{gender,jdbcType=VARCHAR} ,
            </if>
            <if test="city != null">
                city = #{city,jdbcType=VARCHAR} ,
            </if>
            <if test="province != null">
                province = #{province,jdbcType=VARCHAR} ,
            </if>
            <if test="country != null">
                country = #{country,jdbcType=VARCHAR} ,
            </if>
            <if test="avatarUrl != null">
                avatar_url = #{avatarUrl,jdbcType=VARCHAR},
            </if>
            <if test="watermark != null">
                timestamp = #{watermark.timestamp,jdbcType=VARCHAR},
                appid = #{watermark.appid,jdbcType=VARCHAR}
            </if>
        </set>
        WHERE id = #{id,jdbcType=TINYINT}
    </update>

    <delete id="delete">
        DELETE FROM wx_ma_user WHERE id = #{id}
    </delete>

    <select id="queryCount" resultType="long">
        SELECT COUNT(1) FROM wx_ma_user
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryOne" resultType="com.minlia.module.wechat.ma.bean.entity.WechatMaUser">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryList" resultType="com.minlia.module.wechat.ma.bean.entity.WechatMaUser">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
        <include refid="ORDER_BY"/>
    </select>

</mapper>